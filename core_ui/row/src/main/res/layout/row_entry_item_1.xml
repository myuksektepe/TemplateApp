<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="data"
            type="kodz.org.core_ui.row.item_rows.entry_item_1.EntryItem1RowRowDataModel" />
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rowEntryItem1Root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:paddingHorizontal="@dimen/itemPaddingHorizontal"
        android:paddingVertical="@dimen/itemPaddingVertical">

        <kodz.org.core_ui.component.image.RoundedImage
            android:id="@+id/imgEntry"
            android:layout_width="@dimen/entryItem1ImageWidth"
            android:layout_height="@dimen/entryItem1ImageHeight"
            app:cardCornerRadius="@dimen/cardCornerRadius"
            app:cardElevation="@dimen/cardElevation"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <kodz.org.core_ui.component.text.ClassicTextView
            android:id="@+id/txtEntryTitle"
            android:layout_width="@dimen/none"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/defaultMarginStart"
            android:ellipsize="end"
            android:maxLines="2"
            android:textSize="@dimen/defaultTextSize"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/imgEntry"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imgEntry"
            app:layout_constraintTop_toTopOf="@+id/imgEntry"
            tools:text="@string/lipsum" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>