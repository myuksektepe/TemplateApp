<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="data"
            type="kodz.org.core_ui.row.box.BoxRowDataModel" />

        <variable
            name="cornersType"
            type="kodz.org.core_ui.row.box.CornersType" />
    </data>

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/rowBoxRoot"
        app:cardElevation="0dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_200sdp"
        app:cardCornerRadius="@{ (data.cornersType == cornersType.ROUNDED) ? @dimen/_8sdp : 0}">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgRowBoxBackground"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:foreground="@{ (data.gradientIsVisible == true) ? @drawable/carousel_item_background : null}"
                android:scaleType="centerCrop"
                tools:background="@android:color/holo_blue_bright"/>

            <kodz.org.core_ui.component.text.ClassicTextView
                android:id="@+id/txtRowBoxTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_16sdp"
                android:layout_marginBottom="@dimen/_8sdp"
                android:ellipsize="end"
                android:maxLines="3"
                android:text="@{data.title}"
                android:textColor="@color/dayNightReverse"
                android:textSize="@dimen/_15sdp"
                app:layout_constraintBottom_toTopOf="@+id/txtRowBoxDescription"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:textWeight="bold"
                tools:text="@string/lipsum" />

            <kodz.org.core_ui.component.text.ClassicTextView
                android:id="@+id/txtRowBoxDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_16sdp"
                android:layout_marginBottom="@dimen/_16sdp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="@{data.description}"
                android:textColor="@color/dayNightReverse"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:text="@string/lipsum" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</layout>