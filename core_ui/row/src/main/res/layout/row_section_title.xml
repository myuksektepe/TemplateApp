<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="data"
            type="kodz.org.core_ui.row.section_title.SectionTitleRowDataModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <kodz.org.core_ui.component.text.ClassicTextView
            android:id="@+id/txtSectionTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_16sdp"
            android:text="@{data.titleText}"
            android:textSize="@dimen/_17sdp"
            app:layout_constraintBottom_toBottomOf="@+id/btnSectionViewAll"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/btnSectionViewAll"
            app:weight="bold"
            tools:text="Section Title" />

        <kodz.org.core_ui.component.button.TextButton
            android:id="@+id/btnSectionViewAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_16sdp"
            android:background="@color/transparent"
            android:enabled="@{data.isButtonEnable}"
            android:text="@{data.buttonText != null ? data.buttonText : @string/viewAll}"
            android:visibility="@{data.isButtonVisible == true ? View.VISIBLE : View.GONE}"
            app:backgroundColor="@color/lighterGray"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:textSize="@dimen/_12sdp"
            app:underline="true"
            tools:text="See All >" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
