<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="data"
            type="kodz.org.core_ui.row.item_rows.full_width_image.FullWidthImageRowDataModel" />
    </data>

    <kodz.org.core_ui.component.image.RoundedImage xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/imgFullWidth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/itemMarginVertical"
        app:cardCornerRadius="@dimen/none"
        app:imageUrl="@{data.imageUrl}"
        app:shadowColor="@color/black70"
        app:showShadow="true" />
</layout>
